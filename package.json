{
  "name": "@hsjakobsen/utilities",
  "version": "1.0.18",
  "description": "A bunch of utility functions that I use across various projects",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --verbose --notify --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint && npm run build",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hsjakobsen/utilities.git"
  },
  "author": "hsjakobsen",
  "keywords": [
    "Utilities",
    "Formatting",
    "Validation",
    "Date",
    "Numbers"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hsjakobsen/utilities/issues"
  },
  "homepage": "https://github.com/hsjakobsen/utilities#readme",
  "dependencies": {
    "email-validator": "^2.0.4",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "files": [
    "lib/**/*"
  ]
}
